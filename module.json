{
  "dependencies": [],
  "singleton": false,
  "category": "complex_applications",
  "author": "Egor Eremeev",
//  "homepage": "http://razberry.z-wave.me",
  "icon": "icon.png",
  "moduleName": "SensoredSmartLight",
  "version": "1.0",
  "maturity": "beta",
  "repository": {
    "type": "git",
    "source": "https://github.com/iNorD/SensoredSmartLight"
  },
  "defaults": {
    "title": "__m_title__",
    "description": "__m_descr__",
    "MotionSensor": null,
    "LuminositySensor": null,
    "Dimmer": null,
    "Level": {
      "MorningLevel": "25",
      "DayLevel": "40",
      "NightLevel": "33"
    },
    "Morning": {
      "MorningTimeStart": "04:00",
      "MorningTimeEnd": "10:00"
    },
    "RoomParams": {
      "LightbulbLumens": "600",
      "RoomArea": "20"
    },
    "Day": {
      "DayTimeStart": "10:00",
      "DayTimeEnd": "16:00"
    },
    "timeout": 0
  },
  "schema": {
    "type": "object",
    "properties": {
      "MotionSensor": {
        "field": "enum",
        "datasource": "namespaces",
        "enum": "namespaces:devices_sensorBinary:deviceId",
        "required": true
      },
      "LuminositySensor": {
        "field": "enum",
        "datasource": "namespaces",
        "enum": "namespaces:devices_sensorMultilevel:deviceId",
        "required": false
      },
      "Dimmer": {
        "field": "enum",
        "datasource": "namespaces",
        "enum": "namespaces:devices_switchMultilevel:deviceId",
        "required": true
      },
      "Level": {
        "type": "object",
        "properties": {
          "MorningLevel": {
            "type": "integer",
            "minimum": 0,
            "maximum": 99,
            "required": true
          },
          "DayLevel": {
            "type": "integer",
            "minimum": 0,
            "maximum": 99,
            "required": true
          },
          "NightLevel": {
            "type": "integer",
            "minimum": 0,
            "maximum": 99,
            "required": true
          }
        }
      },
      "Morning": {
        "type": "object",
        "properties": {
          "MorningTimeStart": {
            "type": "string",
            "required": true
          },
          "MorningTimeEnd": {
            "type": "string",
            "required": true
          }
        }
      },
      "RoomParams": {
        "type": "object",
        "properties": {
          "LightbulbLumens": {
            "type": "integer",
            "minimum": 1,
            "maximum": 1000,
            "required": true
          },
          "RoomArea": {
            "type": "integer",
            "minimum": 1,
            "maximum": 99,
            "required": true
          }
        }
      },
      "Day": {
        "type": "object",
        "properties": {
          "DayTimeStart": {
            "type": "string",
            "required": true
          },
          "DayTimeEnd": {
            "type": "string",
            "required": true
          }
        }
      },
      "timeout": {
        "type": "number",
        "required": false
      }
    },
    "required": true
  },
  "options": {
    "fields": {
      "MotionSensor": {
        "label": "__l_MotionSensor__",
        "type": "select",
        "datasource": "namespaces",
        "field": "optionLabels",
        "optionLabels": "namespaces:devices_sensorBinary:deviceName"
      },
      "LuminositySensor": {
        "label": "__l_LuminositySensor__",
        "type": "select",
        "datasource": "namespaces",
        "field": "optionLabels",
        "optionLabels": "namespaces:devices_sensorMultilevel:deviceName"
      },
      "Dimmer": {
        "label": "__l_Dimmer__",
        "type": "select",
        "datasource": "namespaces",
        "field": "optionLabels",
        "optionLabels": "namespaces:devices_switchMultilevel:deviceName"
      },
      "Level": {
        "label": "__l_Level__",
        "fields": {
          "MorningLevel": {
            "label": "__l_MorningLevel__"
          },"DayLevel": {
            "label": "__l_DayLevel__"
          },
          "NightLevel": {
            "label": "__l_NightLevel__"
          }
        }
      },
      "RoomParams": {
        "label": "__l_RoomParams__",
        "fields": {
          "LightbulbLumens": {
            "label": "__l_LightbulbLumens__"
          },
          "RoomArea": {
            "label": "__l_RoomArea__"
          }
        }
      },
      "Morning": {
        "label": "__l_Day__",
        "fields": {
          "MorningTimeStart": {
            "label": "__l_DayTimeStart__",
            "type": "time",
            "maskString": "99:99",
            "timeFormat": "__timeFormat__",
            "timeFormatRegex": "/^(([0-1][0-9])|([2][0-3])):([0-5][0-9])$/"
          },
          "MorningTimeEnd": {
            "label": "__l_DayTimeEnd__",
            "type": "time",
            "maskString": "99:99",
            "timeFormat": "__timeFormat__",
            "timeFormatRegex": "/^(([0-1][0-9])|([2][0-3])):([0-5][0-9])$/"
          }
        }
      },
      "Day": {
        "label": "__l_Day__",
        "fields": {
          "DayTimeStart": {
            "label": "__l_DayTimeStart__",
            "type": "time",
            "maskString": "99:99",
            "timeFormat": "__timeFormat__",
            "timeFormatRegex": "/^(([0-1][0-9])|([2][0-3])):([0-5][0-9])$/"
          },
          "DayTimeEnd": {
            "label": "__l_DayTimeEnd__",
            "type": "time",
            "maskString": "99:99",
            "timeFormat": "__timeFormat__",
            "timeFormatRegex": "/^(([0-1][0-9])|([2][0-3])):([0-5][0-9])$/"
          }
        }
      },
      "timeout": {
        "label": "__l_timeout__",
        "helper":"__h_timeout__"

      }
    }
  }
}
